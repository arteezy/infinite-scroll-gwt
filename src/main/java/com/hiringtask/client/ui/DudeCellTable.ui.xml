<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:s="urn:import:com.hiringtask.client.ui">

    <ui:style>
        .scrollable {
            height: 300px;
            width: 400px;
            border: 1px solid #ccc;
            text-align: left;
        }
        .pager {
            margin: 5px;
        }
    </ui:style>

    <g:HTMLPanel>
        <s:ShowMorePagerPanel addStyleNames='{style.scrollable}' ui:field='pagerPanel' />
        <s:RangeLabelPager addStyleNames='{style.pager}' ui:field='rangeLabelPager' />
        <!--s:ShowMorePagerPanel ui:field='pager' /-->
    </g:HTMLPanel>
</ui:UiBinder>